<% include ./partials/header.ejs %>
<div class="w-full profile min-h-screen bg-zinc-800 text-white pt-1">
    <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 ">
                <i class="text-zinc-700 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
             </div>
        </div>
        <h1 class="text-3xl font-semibold mt-3 "><%= user.name %></h1>
        <h3 class="text-sm mb-2">@<%=user.username%></h3>

        <a class=" mt-2 text-xm font-semibold px-5 py-1 bg-zinc-700 rounded-full" href="/edit">Edit</a>

        <a href="/add" class="mt-2 py-1 px-6 font-semibold rounded-lg bg-red-700 text-sm">Add New Post</a>
    </div>

    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 rounded-lg h-40 bg-zinc-200 overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%=user.posts[0]?.image %>" alt="">
            </div> 
            <a href="/show/posts" class="text-xl inline-block font-semibold mt-3">Your uploaded Pins</a>
            <h5 class="text-sm font-semibold opacity-60"><%= user.posts.length%>pins</h5>    
        </div>

    </div>
</div>

<script>
document.querySelector('#uploadicon').addEventListener('click', function(){
    document.querySelector('#uploadform input').click();
})

document.querySelector('#uploadform input').addEventListener('change',function(){
    document.querySelector('#uploadform').submit();
})
</script>

<% include ./partials/footer.ejs %>