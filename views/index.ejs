<% include ./partials/header.ejs %>
<div
  class="flex items-center justify-center w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1604079628040-94301bb21b91?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')]"
>
  <div class="w-[25vw] bg-white py-5 px-20 rounded-md">
    <h1
      class="text-3xl tracking-tighter font-semibold text-center capitalize leading-none mb-3 text-zinc-700"
    >
      Welcome to pinterest.
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="text"
        name="username"
        id=""
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="password"
        name="password"
        id=""
        placeholder="password"
      />
      <a class="mt-2 font-semibold text-zinc-600 inline-block" href=""
        >Forgot Password ?</a
      >
      <input
        class="border-2 rounded-full block w-full mt-2 px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Log In"
      />
      <p
        class="text-xs mt-3 w-3/4 mx-auto font-semibold text-zinc-700 mt-2 text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection; Opens a new tab.
      </p>
    </form>
    <a
      class="inline-block w-full text-zinc-700 text-center font-semibold mt-3 text-sm"
      href="/register"
      >Don't have an account ?</a
    >
  </div>
</div>
